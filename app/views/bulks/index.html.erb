<div class="panel panel-default">
      <div class="panel-heading">
        <h3>List of Sent Bulk SMS</h3>
      </div> 
<div class="panel-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Message</th>
      <th>Status</th>
      <th>Cost</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulks.each do |bulk| %>
      <tr>
        <td><%= bulk.number %></td>
        <td><%= bulk.message %></td>
        <td><%= bulk.status %></td>
        <td><%= bulk.cost %></td>
        <td><%= bulk.message_id %></td>
        <td><%= link_to 'Destroy', bulk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'New Bulk', new_bulk_path, class: 'btn btn-success' %>
</div>
